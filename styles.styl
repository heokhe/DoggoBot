body
  display flex
  align-items center
  justify-content center
  margin 0
  min-height 100vh
  font-family roboto
  background-image linear-gradient(to top, #ccc, #fff)

.container
  display grid
  grid-template-columns 80px 80px 80px 80px
  grid-template-rows 80px 80px 80px
  grid-gap 24px

.cell
  display flex
  align-items center
  justify-content center
  font-size 16px
  color white
  border-radius 3px
  flex-wrap wrap
  transform rotate(45deg)
  .action
    width 50%
    height 50%
    text-align center
    transform rotate(-45deg)
    color green
  .indicator
    position absolute
    z-index 3
    width 16px
    height 16px
    background blue
    border-radius 100%